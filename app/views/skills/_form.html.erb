<div class="col-md-8 col-md-offset-2">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h1>New Skill</h1>
			</div>
			<div class="panel-body">
				<%= simple_form_for [@user, @skill],  html: {multipart: true}  do |f| %>
					<%= f.input :name %>
					<%= f.input :description %>
					<%= f.input :image %>
					<%= f.button :submit %>
				<% end %>
			</div>
		</div>
	</div>
</div>
